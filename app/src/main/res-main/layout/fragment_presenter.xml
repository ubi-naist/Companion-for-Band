<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pimp.companionforband.fragments.presenter.PresenterFragment"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <ImageView
            android:id="@+id/heartRateImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_heart_pulse" />
        <TextView
            android:id="@+id/heartRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="- BPM"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?android:textAppearanceLarge"/>
        <ImageView
            android:id="@+id/expandImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal|center_vertical"
            app:srcCompat="@drawable/ic_expand_all" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/sensors_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/sensors_graph"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_margin="5dp" />
    </android.support.v7.widget.CardView>
</LinearLayout>
